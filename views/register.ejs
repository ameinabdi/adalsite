<body class="body">
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="row ">
            
            <div class="col-12">
                <div class="card">
                    <div class="card-body box">
                        <h4 class="card-title title">SignUp</h4>
                        <form action="/signup" method="POST" enctype="multipart/form-data">
                                <div class="text-center">
                                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                                        <h6>Upload Your Bussiness Brand</h6>
                                        <p>Waxaad galin kartaa sawirada ah jpg iyo png</p>
                                        <input type="file" class="text-center center-block file-upload" name="picture" required>
                                      </div></hr><br>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>magaca ganacsiga</label>
                                            <input type="text" class="form-control" name="name" placeholder=" Magaca Shaqadaada" required>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                            <label>Magaca isticmaalaha</label>
                                        <div class="form-group"> 
                                            <input type="text" class="form-control" name="username" placeholder="Magacaaga" required>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                            <label> Email</label>
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-control" placeholder="email shaqada" required>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                            <label>Furaha</label>
                                        <div class="form-group">
                                            <input type="password" name="password" class="form-control" placeholder="Furahaada" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Goobta shaqada</label>
                                                <input type="text"  class="form-control" name="address" placeholder="Cinwaanka shaqadaada"required>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                                <label>Xiriirka shaqada</label>
                                            <div class="form-group">
                                                <input type="text" name="contact" class="form-control" placeholder="Xiriirinta Xirfadlahaaga" required>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                                <label>Magaca maamulaha</label>
                                            <div class="form-group">
                                                <input type="text" name="manager" class="form-control" placeholder="Magaca maamulaha" required>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                                <label>Macluumaad/information</label>
                                            <div class="form-group">
                                                <input type="text" name="infomanager" class="form-control" placeholder="Macluumaadka mamulaha" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Sharaxaad</label>
                                                <textarea class="form-control" placeholder="Your Discription" name="information" rows="5" required>
                                                </textarea> 
                                                </div>
                                            </div>
                                        </div>  
                            <div class="form-actions">
                                <div class="text-right">
                                    <button type="submit" class="btn btn-info">Submit</button>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

          
